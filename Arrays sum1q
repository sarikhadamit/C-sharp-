using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter array size: ");
        int n = int.Parse(Console.ReadLine());

        int[] arr = new int[n];
        int sum = 0;

        // Input elements
        Console.WriteLine("Enter array elements:");
        for (int i = 0; i < n; i++)
        {
            arr[i] = int.Parse(Console.ReadLine());
        }

        // Print elements with index and calculate sum
        Console.WriteLine("\nElements with index:");
        for (int i = 0; i < n; i++)
        {
            Console.WriteLine("Index " + i + " = " + arr[i]);
            sum += arr[i];
        }

        Console.WriteLine("\nSum of all elements = " + sum);
    }
}
